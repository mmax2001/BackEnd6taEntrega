<h1 style="text-align: center;margin-top: 10px;">Ingreso de datos para cargar productos</h1>
    <section class="container pt-2">
        <form id="loadingForm" action="/productos" method="POST">
            <div class="mb-2">
                <label for="title" class="form-label">Nombre</label>
                <input type="text" name="title" class="form-control" id="title">
            </div>

            <div class="mb-2">
                <label for="price" class="form-label">Precio</label>
                <input type="number" name="price" class="form-control" id="price">
            </div>

            <div class="mb-5">
                <label for="thumbnail" class="form-label">Foto - URL</label>
                <input type="text" name="thumbnail" class="form-control" id="thumbnail">
            </div>

            <button type="submit" class="btn btn-primary">Enviar</button>
            <hr>
            <div id="productsList">
                
            </div>
        </form>
        <br>
        <hr>
        
        <div class="container back-grey p-3">
            <h1 class="blue m-2">Centro de Mensajes</h1>
            <form id="messageCenter">
                <div class="container">
                    <div class="column">
                        <div class="col-6 mb-3 mt-4">
                            <label for="email" class="form-label"><strong>Email</strong></i></label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <hr>
                        <div id="mensajes"></div>
                        <div class="col-6 mt-4">
                            <label for="msg" class="form-label"><strong>Mensaje</strong></i></label>
                            <input disabled type="text" class="form-control" id="msg" name="msg">
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 mt-3">
                        <button disabled id="sendButton" class="btn btn-primary" type="submit">Enviar</button>
                    </div>
                </div>
            </div>
            </form>
        <hr/>
        <div id="listMessages"></div>
        </div> 
        
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/index.js"></script>