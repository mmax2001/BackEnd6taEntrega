{{!--productsList--}}
<div class="back-grey mt-3 table-responsive">
        <h2 class="m-3">Listado de Productos</h2>    
        {{#if productos}}
            <table class="table table-hover table-bordered align-middle">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>
                {{#each productos}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>$ {{this.price}}</td>
                        <td><img class="images" src="{{this.thumbnail}}"></td>
                    </tr>
                {{/each}}
            </table>
        {{ else }}
            <div class="back-yellow m-5">
                <h2 class="alert alert-danger">No hay productos</h2>
            </div>
        {{/if}}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</div>
